<%#include "vehiclemodel.h"%>
<% tfetch(QList<VehicleModel>, vehicleModelList) %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="/admin/model/create" class="btn-circle btn-circle-raised btn-circle-danger float-right">
              <i class="fa fa-plus" style="margin-left: 10px"></i>
            </a>
            <i class="fa fa-globe"></i> Model Management
          </h3>
        </div>
        <div class="panel-body">
          <%== renderPartial("flash") %>
          <div class="row" id="Container">
            <% for (const auto &i : vehicleModelList) { %>
              <div class="col-lg-4 col-md-6 mix category-2" style="display: inline-block;" data-bound="">
                <div class="card">
                  <figure class="ms-thumbnail">
                    <img src="<%= i.logo() %>" alt="" class="img-fluid fixed-height">
                    <figcaption class="ms-thumbnail-caption text-center">
                      <div class="ms-thumbnail-caption-content">
                        <h4 class="ms-thumbnail-caption-title mb-2"><%= i.name() %></h4>
                        <a href="/admin/model/save/<%=i.id()%>" 
          class="btn-circle btn-circle-raised btn-circle-xs mr-1 btn-circle-white color-danger">
                          <i class="zmdi zmdi-edit"></i>
                        </a>
                        <a href=href="javascript:void(0)" 
          class="btn-circle btn-circle-raised btn-circle-xs ml-1 mr-1 btn-circle-white color-warning"
          data-toggle="modal" data-target="#removeModelModal<%=i.id()%>">
                          <i class="zmdi zmdi-delete"></i>
                        </a>
                      </div>
                    </figcaption>
                  </figure>
                  <div class="card-body overflow-hidden text-center portfolio-item-caption d-none">
                    <h3 class="color-primary no-mt">actions</h3>
                    <p>here it is</p>
                  </div>
                </div>
              </div>
              <!-- remove model modal -->
              <div class="modal modal-danger" id="removeModelModal<%=i.id()%>" tabindex="-1" role="dialog" aria-labelledby="removeModelModalLabel<%=i.id()%>">
                <div class="modal-dialog modal-lg animated zoomIn animated-3x" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h3 class="modal-title color-secondary" id="removeModelModalLabel<%=i.id()%>">Remove Model</h3>
                    </div>
                    <div class="modal-body">
                      <form class="form-horizontal" method="POST" action="/admin/model/remove/<%=i.id()%>">
                        <fieldset class="container">
                          <div class="form-group row">
                            <div class="col-lg-10">
                              <h3>Are you sure to remove this model?</h3>
                              <div class="card">
                                <div class="card-body mx-auto">
                                  <img src="<%=i.logo()%>" width="200px">
                                </div>
                              </div>
                            </div>
                          </div>
                          <div class="form-group row">
                            <div class="col-lg-10">
                              <button type="submit" class="btn btn-raised btn-danger">Yes</button>
                              <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
                            </div>
                          </div>
                        </fieldset>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<%#include "grade.h" %>
<% tfetch(QVariantMap, grade) %>
<% tfetch(QString, err_name) %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <i class="fa fa-globe"></i> Edit Grade
          </h3>
        </div>
        <div class="panel-grade">
          <%== renderPartial("error") %>
          <%== renderPartial("flash") %>
          <form class="form-horizontal" method="POST" action="/admin/grade/save/<%=grade["id"]%>">
            <fieldset class="container">
              <input type="text" name="grade[id]" value="<%= grade["id"] %>" style="display: none"/>
          <div class="form-group row is-empty">
            <label for="inputName" autocomplete="false" 
        class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
              <% if(err_name == NULL) { %>
                <input type="text" class="form-control is-valid" id="inputName" placeholder="name" name="grade[name]" value="<%= grade["name"] %>" />
                <% } else { %>
                <input type="text" class="form-control is-invalid" id="inputName" placeholder="name" name="grade[name]" value="<%= grade["name"] %>" />
                <div class="invalid-feedback">
                  <%= err_name %>
                </div>
                <% } %>
              </div>
            </div>
            <div class="form-group row justify-content-end">
              <div class="col-lg-10">
                <button type="submit" class="btn btn-raised btn-danger">Save</button>
                <a href="<%== urla("index") %>" class="btn btn-raised btn-info">Cancel</a>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
</div>

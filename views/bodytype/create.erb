<%#include "bodytype.h" %>
<% tfetch(QVariantMap, bodyType) %>
<% tfetch(QString, err_name) %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fa fa-globe"></i>
                        Create Body
                    </h3>
                </div>
                <div class="panel-body">
                    <%== renderPartial("error") %>
                    <form class="form-horizontal" method="POST" action="/admin/body/create">
                        <fieldset class="container">
                            <div class="form-group row is-empty">
                                <label for="inputName" autocomplete="false" class="col-lg-2 control-label">Name</label>
                                <div class="col-lg-10">
                                    <% if(err_name == NULL) { %>
                                        <input type="text" class=" form-control is-valid" id="inputName" placeholder="name" name="bodyType[name]" value="<%= bodyType["name"] %>"/>
                                    <% } else { %>
                                        <input type="text" class="form-control is-invalid" id="inputName" placeholder="name" name="bodyType[name]" value="<%= bodyType["name"] %>"/>
                                        <div class="invalid-feedback">
                                            <%= err_name %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-10">
                                    <button type="submit" class="btn btn-raised btn-danger">Create</button>
                                    <a href="<%== urla("index") %>" class="btn btn-raised btn-info">Cancel</a>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

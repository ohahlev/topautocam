<%#include "drivetype.h" %>
<% tfetch(QVariantMap, driveType) %>
<% tfetch(QString, err_name) %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <i class="fa fa-globe"></i> Create Drive
          </h3>
        </div>
        <div class="panel-body">
          <%== renderPartial("error") %>
          <form class="form-horizontal" method="POST" action="/admin/drive/create">
            <fieldset class="container">
              <div class="form-group row is-empty">
                <label for="inputName" autocomplete="false" 
        class="col-lg-2 control-label">Name</label>
                <div class="col-lg-10">
                  <% if(err_name == NULL) { %>
                    <input type="text" class=" form-control is-valid" id="inputName" placeholder="name" name="driveType[name]" value="<%= driveType["name"] %>" />
                    <% } else { %>
                    <input type="text" class="form-control is-invalid" id="inputName" placeholder="name" name="driveType[name]" value="<%= driveType["name"] %>" />
                    <div class="invalid-feedback">
                      <%= err_name %>
                    </div>
                    <% } %>
                  </div>
                </div>
                <div class="form-group row justify-content-end">
                  <div class="col-lg-10">
                    <button type="submit" class="btn btn-raised btn-danger">Create</button>
                    <a href="<%== urla("index") %>" class="btn btn-raised btn-info">Cancel</a>
                  </div>
                </div>
              </fieldset>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

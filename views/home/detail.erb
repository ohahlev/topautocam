          </div>
          <div class="col-sm-6 text-center">
            <h2 class="color-success no-m text-normal"><%== vehicle.price() %></h2>
          </div>
        </div>
        <!--- row -->
      </div>
      <!-- mb-2 -->
      <p class="lead">
        <%== vehicle.detail() %>
      </p>
      <ul class="list-unstyled">
        <li><strong><%== vehicle.getModel().name() %></strong></li>
      </li>
      <li class="mb-2"><strong>Availability: </strong>
        <% if (vehicle.inventoryStatus() == "SOLD") { %>
          <span class="ms-tag ms-tag-danger">
            SOLD
          </span>
          <% } else { %>
          <span class="ms-tag ms-tag-success">$
            <%== vehicle.price() %>
          </span>
          <% } %>
        </li>
      </ul>
    </div>
